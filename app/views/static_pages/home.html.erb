<% if !user_signed_in? %>

<style type="text/css">
  body{
    background: 
      linear-gradient(
      rgba(0,0,0, 0.7),
      rgba(0,0,0, 0.7)),
      url('bg.jpg') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .container-index{
    margin-right: 15%;
    margin-left: 15%;
    font-weight: bold;
  }
  .text{
    color: white;
    font-weight: 300;
    font-size: 150%;
  }

</style>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container-index row home">
  <div class="col-md-12 titulo__home">
    <h1>UniBlah!</h1>
    <p class="text">
      Compartilhe suas ideias e pensamentos aqui
    </p>
  </div>
  <div class="col-md-12">
    <div class="sign-in col-md-6 col-sm-12"> 
      <%= link_to('Entrar', new_user_session_path, class: "btn btn-lg btn-uniblah") %> 
    </div>
    <div class="sign-up col-md-6 col-sm-12"> 
      <%= link_to('Registrar', new_user_registration_path, class: "btn btn-lg btn-uniblah") %>
    </div>
  </div>
</div>


<% else %>
  <script type="text/javascript">
    document.location = "/home";
  </script>
<% end %>

