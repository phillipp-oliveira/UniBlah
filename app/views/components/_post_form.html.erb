<div class="panel panel-default post-form-panel">
  <div class="panel-body row">
    <div class="col-md-2 col-sm-2 col-xs-2">
      <img class="rounded-img avatar-size-small" src="http://alexeitruhin.github.io/images/avatar-br.png">
    </div>
    <div class="col-md-10 col-sm-10 col-xs-10">
      <%= form_for(@newPost) do |f| %>
        <center>
          <div class="field new-post-box">
            <%= f.text_field :content, autofocus: true, class: "form-control", autocomplete: "off", placeholder: "Escreva algo ;)" %>
            <span type="button" class="new-post-submit btn btn-submit">
              <%= button_tag( :class => "btn btn-primary") do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Postar
              <% end %>
            </span>
          </div>
        </center>
      <% end %>
    </div>
  </div>
</div>