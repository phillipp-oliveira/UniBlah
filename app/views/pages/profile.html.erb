<div class="row">
  <div class="col-xs-12">
    <div class="jumbotron">
      <h1><%= @username %></h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>profile</p>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <%= render '/components/post_form' %>
    <br><br>

    <% for @post in @posts %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-1">
            <img src="http://alexeitruhin.github.io/images/avatar-br.png" width="50px" height="50px">
          </div>
          <div class="col-sm-11">
            <p class="post-title"><%= @post.user.username %> - <%= time_ago_in_words(@post.created_at) %></p>
            <p class="post-content"><%= @post.content %></p>
          </div>
          <div class="col-sm-12">
            <p class="post-links">links</p>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>follow</p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p>trends</p>
      </div>
    </div>
  </div>
</div>