<div class="row">
  <div class="col-md-3 col-sm-3 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body" style="padding: 0px;">
        <div class="panel-image-hide-panel-body">
          <img class="panel-image-preview profile-panel-bg" src="/1500x500.jpg">
        </div>
        <div class="panel-footer text-center">
          <div class="row">
            <div class="col-sm-2">
              <img class="rounded-img avatar-size-medium" src="http://alexeitruhin.github.io/images/avatar-br.png">
            </div>
            <div class="col-sm-10 profile-info">
              <h4 class="text-left"><%= current_user.name %></h4>
              <h5 class="text-left">@<%= current_user.username %></h5>
            </div>
            <div class="col-sm-12">
              <div class="col-lg-4 col-md-6 col-sm-6 col-xs-4 text-left">
                Posts<br>
                <h6><%= @posts.count %></h6>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-6 col-xs-4 text-left">
                Seguindo<br>
                <h6>10</h6>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-6 col-xs-4 text-left">
                Seguidores<br>
                <h6>10</h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- <div class="panel panel-default">
      <div class="panel-body">
        trends
      </div>
    </div> -->
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12">
    <%= render '/components/post_form' %>
    <% for @post in @posts %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-sm-2 col-xs-2">
            <img class="rounded-img avatar-size-medium" src="http://alexeitruhin.github.io/images/avatar-br.png">
          </div>
          <div class="col-sm-10 col-xs-10">
            <p class="post-title">
              <span class="post-owner">
                <%= @post.user.name %>
              </span>
              <span class="post-create-date" title="<%= l(@post.created_at, :format => "%d de %B de %Y as %H:%M") %>">
                @<%= @post.user.username %> - <%= time_ago_in_words(@post.created_at) %>
              </span>
            </p>
            <p class="post-content"><%= @post.content %></p>
          </div>
          <div class="col-sm-10 col-sm-offset-2 col-xs-offset-2 col-xs-12">
            <p class="post-links">
              <span class="glyphicon glyphicon-comment glyphi-links" aria-hidden="true"></span>
              <span class="glyphicon glyphicon-retweet glyphi-links" aria-hidden="true"></span>
              <span class="glyphicon glyphicon-heart glyphi-links" aria-hidden="true"></span>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
        <center>
          <a href="#top">
            <p class="link-top">
              <img class="avatar-size-icon" src="http://alexeitruhin.github.io/images/avatar-br.png">
              Voltar para o topo <span class="glyphicon glyphicon-arrow-up glyphi-links" aria-hidden="true"></span>
            </p>
          </a>
        </center>
        </div>
      </div>
    </div>

  </div>
  <div class="col-md-3 col-sm-3 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <p>follow</p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size: 90%;">2017 - UniBlah!</p>
      </div>
    </div>
  </div>
</div>